
@import '../../../template/toTop/toTop.wxss';


/* 标签栏 */

.tabBar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  top: 0;
  z-index: 10;
  font-size: 30rpx;
  width: 100%;
  background: #fff;
  border-top: 1px solid #D7D7D7;
  border-bottom: 1px solid #D7D7D7;
  margin-bottom: 0;
}

.tabBar text {
  box-sizing: border-box;
  display: block;
  font-size: 14px;
  text-align: center;
  line-height: 40px;
  width: 50%;
  padding: 0 15px;
  border-bottom: 2px solid transparent;
}

.tabBar text.tab-active {
  color: #F35150;
  border-bottom: 2px solid #F35150;
}

/* 主体  */
page {
  padding-top: 50px;
	background: #eee;
}

.order-item {
	margin-bottom: 10px;
	background: #fff;
}

.order-item:last-child {
	margin-bottom: 0;
}

.order-footer {
	padding: 3px 0;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	margin-right: 20rpx;
	margin-top: 20px;
