
@import '../../../template/toTop/toTop.wxss';

page {
  background: #fff;
}
.button{

}
.button::after{
  width: 100%;

}
.order-item {
  margin-bottom: 10px;
  background: #fff;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-footer {
  padding: 3px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 20rpx;
  border-bottom: 1px solid #eee;
  height: 60rpx;
  align-items: center;
}

.order-footer text {
  font-size: 28rpx;
}

/*每行单元格*/

.carts-item {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 720rpx;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0 10rpx 30rpx;
}

/*左部图片*/

.carts-image {
  width: 150rpx;
  height: 150rpx;
}

/*右部描述*/

.carts-text {
  margin-left: 10rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.btn-pay {
  margin-bottom: 5rpx;
  height: 64rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 27rpx;
  line-height: 64rpx;
  color: #009933;
  background: #fff;
  border: 1rpx solid #009933;
  align-self: flex-end;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.bun-kefu{
  margin-bottom: 5rpx;
  height: 64rpx;
  width: 160rpx;
  font-size: 27rpx;
  line-height: 64rpx;
  color: #009933;
  background: #fff;

  align-self: flex-end;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.btn-ok {
  margin-bottom: 5rpx;
  height: 64rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 27rpx;
  line-height: 64rpx;
  color: #FF9933;
  background: #fff;
  border: 1rpx solid #FF9933;
  align-self: flex-end;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.btn-pinj {
 margin-bottom: 5rpx;
  height: 64rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 27rpx;
  line-height: 64rpx;
  color: #000;
  background: #fff;
  border: 1rpx solid #eee;
  align-self: flex-end;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.btn-cancel {
  margin-bottom: 5rpx;
  height: 61rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 27rpx;
  line-height: 61rpx;
  color: gray;
  border-color: gray;
  border-width: 1rpx;
  border-style: solid;
  background: #fff;
  align-self: flex-end;
  border-radius: 6rpx;
}

/*右上部分标题*/

.carts-title {
  font-size: 28rpx;
  color: #444;
  line-height: 38rpx;
}

/*右下部分价格与数量*/

.carts-subtitle {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: darkgray;
  padding: 0 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/

.carts-price {
  color: #383838;
  font-size: 27rpx;
  line-height: 22px;
}

.carts-num {
  color: #383838;
  font-size: 28rpx;
  line-height: 22px;
}

.carts-right {
  width: 140rpx;
  display: flex;
  height: 120rpx;
  justify-content: space-around;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 20rpx;
}

.view-title {
  height: 68rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.view-title image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.view-title text {
  font-size: 28rpx;
  color: #383838;
  margin-left: 15rpx;
}

.class-tab {
  display: flex;
  flex-direction: row;
  margin-top: 0rpx;
  justify-content: center;
  background: #fff;
  width: 750rpx;
  border-bottom: 1px solid #eee;
}

.text-select {
  /* width: 140rpx; */
  padding-left: 12rpx;
  padding-right: 12px;
  font-size: 28rpx;
  color: red;
  line-height: 82rpx;
  height: 82rpx;
  border-bottom-width: 6rpx;
  border-color: red;
  border-style: solid;
  text-align: center;
  border-top-width: 0;
  border-left-width: 0;
  border-right-width: 0;
}

.text-normal {
  /* width: 140rpx; */
  padding-left: 13rpx;
  padding-right: 13px;
  font-size: 28rpx;
  color: #4d4d4d;
  height: 82rpx;
  line-height: 82rpx;
  border-bottom-width: 0;
  border-color: red;
  border-style: solid;
  text-align: center;
  border-top-width: 0;
  border-left-width: 0;
  border-right-width: 0;
}

.view-tint {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 70rpx;
}

.view-tint image {
  width: 412rpx;
  height: 312rpx;
}

.view-tint text {
  color: #888;
  font-size: 33rpx;
  margin-top: 30rpx;
}
